---
import PageHeader from "@/components/PageHeader.astro";
import Shape from "@/components/Shape.astro";
import CounterComponent from "@/components/impacto/CounterComponent.astro";
import Gallery from "@/components/impacto/Gallery.astro";
import OurMembers from "@/components/quienes-somos/OurMembers.astro";
import Works from "@/components/impacto/Works.astro";
import Base from "@/layouts/Base.astro";
import { getEntryBySlug } from "astro:content";

const impacto = await getEntryBySlug("impacto", "index");
const { counter, gallery, features, members } = impacto.data;
const page_data = {
  ...impacto.data,
  content: impacto.body,
};
---

<Base
  title={impacto.data.title}
  meta_title={impacto.data.meta_title}
  description={impacto.data.description}
  image={impacto.data.image}
>
  <Shape />
  <section class="page-hero py-16">
    <div class="container -mt-14">
      <div class="page-hero-content mx-auto max-w-[768px] text-center">
        <PageHeader page_data={page_data} />
      </div>
      <CounterComponent counter={counter} />
      <!-- benifit -->
      <!-- gellary -->
      <Gallery gallery={gallery} />
      <!-- our works -->
      <!-- <Works features={features} /> por si se quiere usar despues --> 
    </div>
  </section>
</Base>
