---
import Base from "@/layouts/Base.astro";
import TestimonialSlider from "@/layouts/function-components/TestimonialSlider";
import TextSection from "@/layouts/components/TextSection.astro";
import { getEntryBySlug } from "astro:content";

const homepage = await getEntryBySlug("homepage", "index");
const testimonios = await getEntryBySlug("testimonios", "index");
const { testimonial } = homepage.data;
const { Content } = testimonios.render();
---

<Base title={testimonial.title}>
  <section class="reviews">
    <div class="container">
      <div class="row justify-center text-center">
        <div class="lg:col-8">
          <h2>{testimonial.title}</h2>
          <p class="mt-4">{testimonial.description}</p>
        </div>
      </div>
      <div class="row mt-10">
        <div class="col-12">
          <TestimonialSlider list={testimonial.testimonial_list} client:load />
        </div>
      </div>
    </div>
  </section>

  <TextSection 
    content={testimonios.body}
    title={testimonios.data.title}
    description={testimonios.data.description}
  />
</Base>